<div class="section">
  <!-- Banner Image -->
  <div class="banner-container mb-6">
    <img src="/mining banner.jpg" alt="Mining Operations Banner" class="w-full rounded-lg shadow-md" style="max-height: 250px; object-fit: cover;">
  </div>

  <div class="flex justify-between items-center mb-6">
    <h1 class="section-title">Post Details</h1>
    <div>
      <%= link_to "Back to Posts", posts_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <div class="flex justify-between items-center">
        <div>
          <span class="font-medium"><%= @post.user.name %></span>
          <% if @post.user.organisation.present? %>
            <span class="text-sm text-muted-foreground">from <%= @post.user.organisation.name %></span>
          <% end %>
        </div>
        <span class="text-xs text-muted-foreground">Posted on <%= @post.created_at.strftime("%B %d, %Y") %></span>
      </div>
    </div>
    
    <div class="card-content">
      <p class="text-foreground"><%= @post.description %></p>
    </div>
    
    <% if current_user == @post.user %>
      <div class="card-footer">
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-ghost btn-sm" %>
        <%= link_to "Delete", post_path(@post), class: "btn btn-destructive btn-sm", 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" } %>
      </div>
    <% end %>
  </div>
</div>
