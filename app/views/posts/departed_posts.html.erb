<div class="posts-container">
  <div class="posts-header">
    <h1>Posts from Departed Employees</h1>
    <div class="header-actions">
      <%= link_to "Back to Active Posts", posts_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
  <% if @no_organisation %>
    <div class="organisation-notice">
      <p>You are not currently a member of any organisation. Join an organisation to see posts from departed members.</p>
      <%= link_to "View Available Organisations", organisations_path, class: "action-button" %>
    </div>
  <% end %>

  <% if current_user.organisation.present? %>
    <div class="filter-section">
      <%= form_with url: departed_posts_path, method: :get, class: "filter-form" do |form| %>
        <div class="filter-group">
          <div class="filter-field">
            <%= form.label :user_id, "Filter by Departed Employee:" %>
            <%= form.select :user_id, 
                options_for_select([["All Departed Employees", ""]] + @departed_users.map { |u| [u.name, u.id] }, params[:user_id]), 
                {}, { class: "filter-select" } %>
          </div>
          
          <div class="filter-field">
            <%= form.label :start_date, "From:" %>
            <%= form.date_field :start_date, value: params[:start_date], class: "filter-date" %>
          </div>
          
          <div class="filter-field">
            <%= form.label :end_date, "To:" %>
            <%= form.date_field :end_date, value: params[:end_date], class: "filter-date" %>
          </div>
          
          <div class="filter-actions">
            <%= form.submit "Apply Filters", class: "filter-button" %>
            <%= link_to "Clear Filters", departed_posts_path, class: "clear-filters" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @departed_posts.any? %>
    <div class="posts-list">
      <% @departed_posts.each do |post| %>
        <div class="post-card departed">
          <div class="post-header">
            <h3>
              <span class="post-author"><%= post.user.name %></span>
              <span class="post-status">(Departed Employee)</span>
              <% if post.user.organisation.present? %>
                <span class="post-org">from <%= post.user.organisation.name %></span>
              <% end %>
            </h3>
            <span class="post-date"><%= post.created_at.strftime("%B %d, %Y") %></span>
          </div>
          
          <div class="post-content">
            <p><%= post.description %></p>
          </div>
          
          <div class="post-actions">
            <%= link_to "View", post_path(post), class: "post-action" %>
            <% if current_user.organisation && current_user.organisation.id == post.user.organisation_id && current_user.active? %>
              <% if post.user.departed? %>
                <%= link_to "Reactivate User", reactivate_user_path(post.user), method: :patch, class: "post-action reactivate", 
                            data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to reactivate this user? Their posts will be visible again in the main feed." } %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-posts">
      <p>No posts from departed employees.</p>
    </div>
  <% end %>
</div>

