<div class="posts-container">
  <div class="posts-header">
    <h1>Posts</h1>
    <div class="header-actions">
      <% if logged_in? && current_user.organisation.present? %>
        <%= link_to "View Departed Employee Posts", departed_posts_path, class: "departed-posts-link" %>
      <% end %>
      <% if logged_in? %>
        <%= link_to "New Post", new_post_path, class: "new-post-button" %>
      <% end %>
    </div>
  </div>
  
  <% if @no_organisation %>
    <div class="organisation-notice">
      <p>You are not currently a member of any organisation. Join an organisation to see posts from other members.</p>
      <%= link_to "View Available Organisations", organisations_path, class: "action-button" %>
    </div>
  <% end %>

  <% if current_user.organisation.present? %>
    <div class="filter-section">
      <%= form_with url: posts_path, method: :get, class: "filter-form" do |form| %>
        <div class="filter-group">
          <div class="filter-field">
            <%= form.label :user_id, "Filter by Employee:" %>
            <%= form.select :user_id, 
                options_for_select([["All Employees", ""]] + @users.map { |u| [u.name, u.id] }, params[:user_id]), 
                {}, { class: "filter-select" } %>
          </div>
          
          <div class="filter-field">
            <%= form.label :start_date, "From:" %>
            <%= form.date_field :start_date, value: params[:start_date], class: "filter-date" %>
          </div>
          
          <div class="filter-field">
            <%= form.label :end_date, "To:" %>
            <%= form.date_field :end_date, value: params[:end_date], class: "filter-date" %>
          </div>
          
          <div class="filter-actions">
            <%= form.submit "Apply Filters", class: "filter-button" %>
            <%= link_to "Clear Filters", posts_path, class: "clear-filters" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @posts.any? %>
    <div class="posts-list">
      <% @posts.each do |post| %>
        <div class="post-card">
          <div class="post-header">
            <h3>
              <span class="post-author"><%= post.user.name %></span>
              <% if post.user.organisation.present? %>
                <span class="post-org">from <%= post.user.organisation.name %></span>
              <% end %>
            </h3>
            <span class="post-date"><%= post.created_at.strftime("%B %d, %Y") %></span>
          </div>
          
          <div class="post-content">
            <p><%= post.description %></p>
          </div>
          
          <div class="post-actions">
            <%= link_to "View", post_path(post), class: "post-action" %>
            <% if current_user && current_user == post.user %>
              <%= link_to "Edit", edit_post_path(post), class: "post-action" %>
              <%= link_to "Delete", post_path(post), 
                          class: "post-action delete", 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-posts">
      <p>No posts found. Be the first to create a post!</p>
    </div>
  <% end %>

  <% unless logged_in? %>
    <div class="login-notice">
      <p>
        <%= link_to "Login", login_path %> or 
        <%= link_to "Sign Up", new_user_path %> to create posts
      </p>
    </div>
  <% end %>
</div>

