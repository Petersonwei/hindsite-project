<div class="auth-container">
  <div class="logo">
    <h1>HINDSITE<span>INC.</span></h1>
  </div>

  <h2>Sign up for an account</h2>

  <%= form_with(model: @user, url: users_path, class: "auth-form") do |form| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :organisation_id, "Organisation Name" %>
      <%= form.collection_select :organisation_id, Organisation.all, :id, :name, { prompt: "Select an organisation" }, { class: "form-control", required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, required: true, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Account", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="auth-links">
    <p>Already have an account? <%= link_to "Login", login_path %></p>
  </div>
</div>

<style>
  .auth-container {
    max-width: 500px;
    margin: 50px auto;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }
  
  .logo {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .logo h1 {
    font-size: 32px;
    font-weight: bold;
    color: #333;
  }
  
  .logo span {
    font-size: 16px;
    vertical-align: super;
  }
  
  h2 {
    text-align: center;
    margin-bottom: 30px;
    font-size: 24px;
  }
  
  .auth-form .form-group {
    margin-bottom: 20px;
  }
  
  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }
  
  .btn-primary {
    width: 100%;
    padding: 12px;
    background-color: #5D5FEF;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
  }
  
  .btn-primary:hover {
    background-color: #4B4DCF;
  }
  
  .auth-links {
    margin-top: 20px;
    text-align: center;
  }
  
  .auth-links a {
    color: #5D5FEF;
    text-decoration: none;
  }
  
  .error-messages {
    background-color: #ffebee;
    color: #c62828;
    padding: 15px;
    border-radius: 4px;
    margin-bottom: 20px;
  }
  
  .error-messages h3 {
    font-size: 18px;
    margin-top: 0;
  }
</style>
