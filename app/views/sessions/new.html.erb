<div class="auth-form-container">
  <div class="auth-logo">
    <img src="/HINDSITE-NAV.svg" alt="Hindsite Logo" style="height: 50px;">
  </div>

  <h2 class="auth-title">Welcome Back</h2>
  <p class="auth-subtitle">Sign in to your account to continue</p>

  <%= form_with(url: login_path, method: :post, class: "auth-form") do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, class: "input", placeholder: "your.email@example.com" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, class: "input", placeholder: "••••••••" %>
    </div>

    <div class="flex justify-between items-center mb-6">
      <div class="flex items-center">
        <input type="checkbox" id="remember-me" class="mr-2">
        <label for="remember-me" class="text-sm text-muted-foreground">Remember me</label>
      </div>
      <a href="#" class="text-sm text-primary hover:text-secondary">Forgot password?</a>
    </div>

    <div class="auth-actions">
      <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="auth-footer">
    <p>Don't have an account? <%= link_to "Create account", new_user_path, class: "font-medium hover:text-secondary" %></p>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', () => {
    // Show login success toast when a user signs in successfully
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('status') === 'success') {
      window.showToast('success', 'Login Successful', 'Welcome back to Hindsite!', 4000);
    }
  });
</script>
