<div class="auth-container">
  <div class="auth-logo">
    <h1 class="text-3xl font-bold">HINDSITE<span class="text-sm align-super">INC.</span></h1>
  </div>

  <h2 class="auth-title">Sign in to your account</h2>

  <%= form_with(url: login_path, method: :post, class: "auth-form") do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, class: "input" %>
    </div>

    <div class="auth-actions mt-6">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="auth-links">
    <p>Don't have an account? <%= link_to "Sign up", new_user_path, class: "text-primary hover:underline" %></p>
    <p><%= link_to "Forgot your password?", "#" %></p>
  </div>
</div>
