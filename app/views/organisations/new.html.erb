<div class="section">
  <div class="flex justify-between items-center mb-6">
    <h1 class="section-title">New Organisation</h1>
    <div>
      <%= link_to "Back to organisations", organisations_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card">
    <div class="card-content">
      <%= form_with(model: @organisation, class: "space-y-4") do |form| %>
        <% if @organisation.errors.any? %>
          <div class="alert alert-error mb-4">
            <h3 class="text-base font-medium mb-2"><%= pluralize(@organisation.errors.count, "error") %> prohibited this organisation from being saved:</h3>
            <ul class="list-disc pl-5">
              <% @organisation.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :country, class: "form-label" %>
          <%= form.text_field :country, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :language, class: "form-label" %>
          <%= form.text_field :language, class: "input" %>
        </div>

        <div class="flex justify-between gap-4 mt-6">
          <%= form.submit "Create Organisation", class: "btn btn-primary" %>
          <%= link_to "Cancel", organisations_path, class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
