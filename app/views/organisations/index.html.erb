<div class="section">
  <div class="flex justify-between items-center mb-6">
    <h1 class="section-title">Organisations</h1>
    <% if logged_in? %>
      <%= link_to "Create New Organisation", new_organisation_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  
  <% if current_user && current_user.organisation.nil? %>
    <div class="alert alert-info mb-6">
      <p>You are not currently a member of any organisation. Join an organisation to interact with other members and share posts.</p>
    </div>
  <% end %>
  
  <div class="grid sm:grid-cols-2 gap-4">
    <% @organisations.each do |org| %>
      <div class="card">
        <div class="card-header">
          <h2 class="card-title"><%= org.name %></h2>
          <p class="card-description">
            <span class="badge badge-outline"><%= org.country %></span>
            <span class="badge badge-outline ml-2"><%= org.language %></span>
          </p>
        </div>
        
        <div class="card-footer">
          <% if current_user && current_user.organisation == org %>
            <span class="badge badge-primary mr-2">Member</span>
            <%= link_to "View Details", org, class: "btn btn-secondary" %>
          <% elsif current_user && current_user.organisation.nil? %>
            <%= link_to "View Details", org, class: "btn btn-secondary mr-2" %>
            <%= button_to "Join Organisation", join_organisation_path(org), method: :post, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "View Details", org, class: "btn btn-secondary" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
